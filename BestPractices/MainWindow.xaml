<Window x:Class="active_directory_wpf_msgraph_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:active_directory_wpf_msgraph_v2"
        mc:Ignorable="d"
        Title="Microsoft Identity Platform Best Practices" 
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Height="1060" Width="1910">
    <Grid>
        <StackPanel Background="Azure">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="Account Type" HorizontalAlignment="Left" Height="50" Margin="10,0,0,0" Width="190" FontFamily="Segoe Ui" FontSize ="30"/>
                <ComboBox x:Name="Authority" HorizontalAlignment="Left" Height="50" Margin="10,0,10,0" Width="200" FontFamily="Segoe Ui" FontSize ="30" SelectionChanged="Authority_SelectionChanged" >
                    <ComboBoxItem Content="All Users" Tag="Common" IsSelected="True"/>
                    <ComboBoxItem Content="Consumers" Tag="Consumers"/>
                    <ComboBoxItem Content="Organizations" Tag="Organizations"/>
                    <ComboBoxItem Content="This Tenant" Tag="c72a295d-d7a5-41ea-a351-b15dd9f67215"/>
                </ComboBox>

                <Label Content="Sign In Scopes"  HorizontalAlignment="Left" Height="50" Margin="305,0,0,0" Width="190" FontFamily="Segoe Ui" FontSize ="30"/>
                <ComboBox x:Name="Scopes" HorizontalAlignment="Left" Height="50" Margin="10,0,10,0" Width="250" FontFamily="Segoe Ui" FontSize ="30" SelectionChanged="Scopes_SelectionChanged">
                    <ComboBoxItem Content="Static Consent" Tag="829f3a28-9104-45e7-a180-a319312bd8c5/.default"/>
                    <ComboBoxItem Content="Just Profile" Tag="user.read" IsSelected="True"/>
                    <ComboBoxItem Content="User Consent" Tag="user.read people.read"/>
                    <ComboBoxItem Content="Everything" Tag="user.read people.read group.read.all"/>
                </ComboBox>

                <Button x:Name="SignIn" Content="Sign In" HorizontalAlignment="Right" Padding="5" Click="SignInButton_Click" Margin="130,5,0,5" FontFamily="Segoe Ui" FontSize ="30" />
                <Button x:Name="CallProfileButton" Content="Profile" HorizontalAlignment="Right" Padding="5" Click="CallProfileButton_Click" Margin="5" FontFamily="Segoe Ui" FontSize ="30" />
                <Button x:Name="CallPeopleButton" Content="People" HorizontalAlignment="Right" Padding="5" Click="CallPeopleButton_Click" Margin="5" FontFamily="Segoe Ui" FontSize ="30" />
                <Button x:Name="CallGroupsButton" Content="Groups" HorizontalAlignment="Right" Padding="5" Click="CallGroupsButton_Click" Margin="5" FontFamily="Segoe Ui" FontSize ="30" />
                <Button x:Name="SignOutButton" Content="Sign Out" HorizontalAlignment="Right" Padding="5" Click="SignOutButton_Click" Margin="5"  FontFamily="Segoe Ui" FontSize ="30" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="1500" Margin="0,10,0,10">
                <TextBox x:Name="AccountType" Text="https://login.microsoftonline.com/common" Margin="5" Width="700" FontFamily="Segoe Ui" FontSize ="24"></TextBox>
                <TextBox x:Name="SignInScope" Text="user.read" Margin="15,5,0,5"  FontFamily="Segoe Ui" FontSize ="24" ></TextBox>
            </StackPanel>
            <Label Content="ID Token" Margin="0,0,0,-5" FontFamily="Segoe Ui" FontSize ="30" MouseDoubleClick="IDToken_MouseDoubleClick"/>
            <TextBox x:Name="IDToken" TextWrapping="NoWrap"  MinHeight="124"  MaxHeight="500" Margin="5" FontFamily="Segoe Ui" FontSize="30" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            <Label Content="Token Response" Margin="0,0,-0.5,-5" FontFamily="Segoe Ui" FontSize ="30" MouseDoubleClick="Response_MouseDoubleClick" />
            <TextBox x:Name="TokenResponseText" TextWrapping="Wrap" MinHeight="124"  MaxHeight="500" Margin="5" FontFamily="Segoe Ui" FontSize="30" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            <Label Content="Results" Margin="0,0,0,-5" FontFamily="Segoe Ui" FontSize ="30" MouseDoubleClick="Results_MouseDoubleClick"/>
            <TextBox x:Name="ResultText" TextWrapping="Wrap" MinHeight="124" MaxHeight="500" Margin="5" FontFamily="Segoe Ui" FontSize="30" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </StackPanel>
    </Grid>
</Window>
